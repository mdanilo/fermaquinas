{{#sprites}}
.sprite-{{name}} {
	position: relative;
	min-width: {{px.width}};
	min-height: {{px.height}};
}
.sprite-{{name}}:before {
  position: absolute;
  background-image: url({{{escaped_image}}});
  background-position: {{px.offset_x}} {{px.offset_y}};
  width: {{px.width}};
  height: {{px.height}};
  content: "";
  left: 0;
  top: 0;
}
{{/sprites}}